@model IEnumerable<KR.Models.ViewModel.CommentVm>
    @{
    ViewData["Title"] = "Тестування ПЗ";
    }
    <!DOCTYPE html>

    <head>
        <link rel="stylesheet" href="~/wwwroot/css/bootstrap.min.css" />
    </head>

    <body>
        @{var problemTitle = ViewBag.ProblemTitle;
        var problemId = ViewBag.ProblemId;
        var typeId = ViewBag.TypeId;
        var problemLink = "../"+typeId;}

        <h3>Коментарі до проблеми</h3>
        <h4> <a href=@problemLink>@problemTitle</a></h4>
        <p>
            <!-- Button trigger modal -->
            <button type="button" class="btn  btn-primary" data-toggle="modal" data-target="#addCommentModal">
                Додати коментар
            </button>
        </p>
        <!-- Modal -->
        <div class="modal fade" id="addCommentModal" tabindex="-1" role="dialog" aria-labelledby="addCommentModalTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Додати коментар
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </h5>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="~/Home/AddComment">
                            <input class="form-control" type="text" placeholder=@problemTitle name="ProblemId" value=@problemId
                                readonly>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Введіть коментар</label>
                                <textarea class="form-control" rows="5" id="comment" name="Text"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">ПІБ</label>
                                <input type="text" class="form-control" name="Status">
                            </div>
                            <button type="submit" class="btn btn-primary">Додати</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="modal fade" id="editCommentModal" tabindex="-1" role="dialog" aria-labelledby="editCommentModalTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Додати коментар
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </h5>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="~/Home/EditComment">
                            <input class="form-control" type="text" placeholder=@problemTitle name="ProblemId" value=@problemId
                                readonly>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Введіть новий коментар</label>
                                <textarea class="form-control" rows="5" id="comment" name="Text"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ваше ім'я</label>
                                <input type="text" class="form-control" name="FirstName">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ваше прізвище</label>
                                <input type="text" class="form-control" name="LastName">
                            </div>
                            <button type="submit" class="btn btn-primary">Зберегти</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <table id="comments" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Текст</th>
                    <th>Дата створення</th>
                    <th>Відправник</th>
                    <th>Дія</th>
                </tr>
                @foreach ( var comment in Model)
                {
                <tr>
                    <td>
                        @comment.Text
                    </td>
                    <td>
                        @comment.Date
                    </td>

                    <td>
                        @{var link = "sender/"+comment.SenderId;}
                        <a href=@link> @comment.SenderName</a>
                    </td>

                    <td>
                        <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#editCommentModal">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        @{var deleteLink = "delcomment/"+comment.Id;}
                        <a href=@deleteLink><button type="button" class="btn  btn-danger">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </a>
                    </td>
                </tr>
                }
            </thead>
            <tbody>
            </tbody>
        </table>
        <nav aria-label="...">
            <ul class="pager">
                <li class="previous"><a href=@problemLink><span aria-hidden="true">&larr;</span> Назад</a></li>
            </ul>
        </nav>
    </body>